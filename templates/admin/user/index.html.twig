{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block content %}
    <h1>Liste des utilisateurs</h1>

    {% for message in app.flashes('success') %}
        <div class="flash-success">{{ message }}</div>
    {% endfor %}

    <table border="1">
        <thead>
        <tr>
            <th>Login</th>
            <th>Mot de passe (hash√©)</th>
            <th>Nom</th>
            <th>Pr√©nom</th>
            <th>Date de naissance</th>
            <th>Statut</th>
            <th>Pays</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.birthDate ? user.birthDate|date('Y-m-d') : '' }}</td>
                <td>
                    {% if 'ROLE_SUPER_ADMIN' in user.roles %}
                        Super Admin
                    {% elseif 'ROLE_ADMIN' in user.roles %}
                        Admin
                    {% else %}
                        Client
                    {% endif %}
                </td>
                <td>{{ user.country ? user.country.name : 'N/A' }}</td>
                <td>
                    {% if user.id != app.user.id and 'ROLE_SUPER_ADMIN' not in user.roles %}
                        <a href="{{ path('admin_user_delete', {'id': user.id}) }}" onclick="return confirm('Supprimer cet utilisateur ?')">üóëÔ∏è Supprimer</a>
                    {% else %}
                        -
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
